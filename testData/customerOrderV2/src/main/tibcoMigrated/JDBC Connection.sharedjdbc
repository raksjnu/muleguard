<?xml version="1.0" encoding="UTF-8"?>
<BWSharedResource>
    <name>JDBC Connection</name>
    <resourceType>ae.shared.JDBCSharedResource</resourceType>
    <config>
        <driver>com.mysql.jdbc.Driver</driver>
        <maxConnections>10</maxConnections>
        <loginTimeout>%%JDBCConnection/Timeout%%</loginTimeout>
        <connectionType>JDBC</connectionType>
        <UseSharedJndiConfig>false</UseSharedJndiConfig>
        <location>jdbc:mysql://%%JDBCConnection/hostname%%:%%JDBCConnection/port%%/%%JDBCConnection/dbname%%</location>
        <user>%%JDBCConnection/username%%</user>
        <password>%%JDBCConnection/password%%</password>
    </config>
</BWSharedResource>